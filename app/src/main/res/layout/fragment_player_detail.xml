<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_rounded"
    tools:context=".ui.fragment.PlayerDetailFragment">

    <!-- Foto atau ikon pemain -->
    <ImageView
        android:id="@+id/imgPlayer"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_pemainn" />

    <!-- Nama Pemain -->
    <TextView
        android:id="@+id/tvPlayerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Player Name" />

    <!-- Posisi Pemain -->
    <TextView
        android:id="@+id/tvPlayerPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        tools:text="Position: Midfielder" />

    <!-- Kewarganegaraan -->
    <TextView
        android:id="@+id/tvPlayerNationality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        tools:text="Nationality: England" />

    <!-- Tanggal Lahir -->
    <TextView
        android:id="@+id/tvPlayerBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        tools:text="Born: 2000-01-15" />

</LinearLayout>
