<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPlayer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="1dp"
    android:layout_marginHorizontal="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Nama pemain -->
        <TextView
            android:id="@+id/tvPlayerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Player Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Posisi -->
        <TextView
            android:id="@+id/tvPlayerPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Midfielder"
            android:textSize="14sp"
            android:visibility="gone"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/tvPlayerName"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Kewarganegaraan -->
        <TextView
            android:id="@+id/tvPlayerNationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="England"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/tvPlayerPosition"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Tanggal lahir -->
        <TextView
            android:id="@+id/tvPlayerBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000-02-10"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvPlayerNationality"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
